<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/CSS/main.css" rel="stylesheet" />
</head>
<body class="movie-bg">
    <div class="container my-5">
        <div class="card shadow-sm">
            <div class="card-body movie-card">
                <h1 class="text-center mb-4">ðŸŽ¬ Movie Management System</h1>
                <hr class="custom-hr"/>

                <h2 class="text-center mb-4">Add Movie</h2>
                <form method="post" action="/addData" enctype="multipart/form-data">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="name" class="form-label">Movie Name:</label>
                            <input type="text" name="name" id="name" class="form-control w-100 " placeholder="Enter Movie Name" required>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="director" class="form-label">Director:</label>
                            <input type="text" name="director" id="director" class="form-control w-100 " placeholder="Enter Director's Name" required>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="releaseDate" class="form-label">Release Date:</label>
                            <input type="date" name="releaseDate" id="releaseDate" class="form-control w-100 " placeholder="Enter Release Year" required>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="fileUp" class="form-label">Poster:</label>
                            <input type="file" name="fileUp" id="fileUp" class="form-control w-100 " required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info w-100 custom-btn">Submit</button>
                </form>

                <hr class="custom-hr"/>

                <h2 class="text-center mb-4">Movies List</h2>
                <div class="row">
                    <% Datas.forEach((data) => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card p-3 movie-card">
                            <img src="<%= data.path %>" class="card-img-top poster-img" alt="<%= data.name %>">
                            <div class="card-body">
                                <p class="font-class">Name : <%= data.name %></p>
                                <p class="font-class">Director : <%= data.director %></p>
                                <p class="font-class">Release Year : <%= data.releaseDate %></p>
                                <div class="d-flex">
                                    <a href="/editData/<%= data.id %>" class="btn btn-warning btn-sm me-2">Edit</a>
                                    <a href="/deleteData/<%= data.id %>" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
